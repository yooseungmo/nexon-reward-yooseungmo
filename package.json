    "build:event": "nest build event",
    "build:gateway": "nest build gateway",
    "start:debug:event": "nx run event:serve --configuration=debug",
    "start:debug:auth": "nx run auth:serve --configuration=debug",
    "start:debug:gateway": "nx run gateway:serve --configuration=debug",
